{
    "name": "timeTrack",
    "version": "0.0.0.1",
    "description": "record the time you spend on a website",
    "manifest_version": 3,

    "icons": {
        "16": "/images/icons",
        "32": "/images/icons",
        "48": "/images/icons",
        "128": "/images/icons"
    },

    "permissions": ["activeTab"],

    "content_scripts": [
        {
            "js": ["scripts/content_script.js"],
            "matches": ["*://*/*"]
        }
    ],

    "action": {
        "default_popup": "html/popup.html"
    }
}