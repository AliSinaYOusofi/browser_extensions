{
    "manifest_version": 3,
    "name": "Reading Time",
    "version": "1.0",
    "description": "Adding the reading time to chrome extesnion",
    
    "icons": {
        "16": "images/icons8-time-64.png",
        "32": "images/icons8-time-64.png",
        "48": "images/icons8-time-64.png",
        "128": "images/icons8-time-64.png"
    },

    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["*://*/*"]
        }
    ],
    "action": {
        "default_popup": "html/popup.html"
    },
    "permissions": ["activeTab"]
}